<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="2"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_edittext2"
        android:gravity="center|clip_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ButtonPoche"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:checked="true"
            android:inputType="none"
            android:text="Poche"
            android:textColor="#000"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/ButtonDos"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:inputType="none"
            android:text="Dos"
            android:textColor="#000"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/ButtonJoin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center|clip_vertical"
        android:onClick="buclick"
        android:orientation="horizontal"
        android:text="Join The Family"
        android:textColor="#000"
        android:textSize="20dp"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/EditQté"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center|clip_vertical"
        android:hint="Quantité"
        android:inputType="number"
        android:orientation="horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/EditCl"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:gravity="center|clip_vertical"
        android:hint="Couleurs"
        android:inputType="number"
        android:orientation="horizontal"
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/EditCc"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:gravity="center|clip_vertical"
        android:hint="Couches"
        android:inputType="number"
        android:orientation="horizontal"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ViewPU"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="360dp"
        android:gravity="center|clip_vertical"
        android:hint="Prix Unitaire"
        android:orientation="horizontal"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ViewPT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:gravity="center|clip_vertical"
        android:hint="Prix Total"
        android:orientation="horizontal"
        android:textColor="#000"
        android:textSize="20dp" />
</RelativeLayout>